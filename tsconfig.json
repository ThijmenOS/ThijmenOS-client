{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "baseUrl": "./src/",
    "paths": {
      "@ostypes/*": ["types/*"],
      "@drivers/*": ["drivers/*"],
      "@core/*": ["core/*"],
      "@utils/*": ["utils/*"],
      "@icon/*": ["fileIcon/*"],
      "@window/*": ["window/*"],
      "@static/*": ["static/*"],
      "@config/*": ["config/*"],
      "@common/*": ["../../javascriptOS-common/types/*"]
    },
    "types": ["node", "reflect-metadata"],
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
